# Telegram API Credentials
# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Your Telegram phone number (with country code, e.g., +1234567890)
PHONE_NUMBER=+1234567890

# Session name (can be any string, used for storing login session)
SESSION_NAME=telegram_forwarder

# Source chat ID from where messages will be forwarded (optional)
# If set, ONLY messages from this chat will be forwarded
SOURCE_CHAT_ID=

# Target chat ID where videos will be forwarded (optional)
# You can get this by forwarding a message from the chat to @userinfobot
# Leave empty to manually specify target for each forward
TARGET_CHAT_ID=

# Logging level (error, warn, info, debug)
LOG_LEVEL=info
